    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./typings"],
  },
  "include": ["src"]
}
